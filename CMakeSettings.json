         "cmakeCommandArgs": "",
         "buildCommandArgs": "",
         "ctestCommandArgs": "",
         "inheritEnvironments": [ "linux_x64" ],
         "wslPath": "${defaultWSLPath}",
         "variables": [
            {
               "name": "MYMODE",
               "value": "wsl",
               "type": "STRING"
            }
         ]
      }
   ]
